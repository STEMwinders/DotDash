//line 76 
function code2letter(code) {
  for (x=0;x<32;x++) {   
    if (code == mc[x]) {
    break
    }
  }
  return lt[x]
}
//line 85
function letter2code(letter) {
  for (x=0;x<32x++) {
    if (letter == lt[x]) {
      break
    }
  }
  return mc[x]
}



















//line 113
function dotdash(){
if (elapsed<6) {
CodeLtr = CodeLtr + "•"
} else {
CodeLtr= CodeLtr + "-"
}
Cod.change(CodeLtr)
}
//line 122
function letter() {
	val = code2letter(CodeLtr)
	if (val == undefined) {
		sound('beeps')
	} else {
		send(CodeLtr)
		MyMsg = MyMsg + val
		Msg.change(MyMsg)
	}
	CodeLtr = "" 
	Cod.change(CodeLtr)
}
//line 135
function word() {
val="□"
  send(val)
 MyMsg = MyMsg + val
  Msg.change(MyMsg)
}
//line 142
function clear() {
  MyMsg = ""
  Msg.change(MyMsg)
  send("x")
}
letterBtn.tap = letter
wordBtn.tap = word
clearBtn.tap = clear
